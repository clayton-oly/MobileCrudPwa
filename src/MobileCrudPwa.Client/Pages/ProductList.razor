@inject HttpClient http

<h3>Produtos (API + SQLite)</h3>
@if (errorMessage is not null)
{
    <div class="alert alert-danger">
        Erro ao carregar produtos: @errorMessage
    </div>
}
else if (products is null)
{
    <p>
        Nenhum produto encontrado
    </p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nome</th>
                <th>Preço</th>
                <th>Estoque</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var produto in products)
            {
                <tr>
                    <td>@produto.Id</td>
                    <td>@produto.Nome</td>
                    <td>@produto.Preco.ToString("C")</td>
                    <td>@produto.Estoque</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<ProdutoDTO>? products;
    private string? errorMessage;
    protected override async Task OnInitializedAsync()
    {
        try
        {
            //usando apenas caminho relativo
            products = await http.GetFromJsonAsync<List<ProdutoDTO>>("api/products");
        }
        catch (Exception ex)
        {

            errorMessage = ex.Message;
        }
    }
}